<br>
<br>
<h1><%= @idea.title %></h1>

<p><%= @idea.body %></p>
<small>
<p>Posted <%= time_ago_in_words(@idea.created_at) %> ago</p>
</small>
<% if can?(:crud, @idea)%>
    <%= link_to "Delete", idea_path(@idea), 
    method: :delete, 
    data: {confirm: "Are you sure you want to delete this idea?"}
    %>
    |
    <%= link_to "Edit", edit_idea_path(@idea)%>
<%end%>

<h2>Review:</h2>

<%= form_with(
    model: [@idea, @review], local: true) do |f| %>

    <%= f.text_area(
        :body,
        cols: 50,
        rows: 5,
        placeholder: "what's your review?"
    )%>
    <br>
    <%= f.submit "Post" %>
<% end %>
<br>
<h2>Comments</h2>

<% @reviews.each do |a| %>

 <li>
        <%= a.body%>
    <br>
    <small>
           <% if can?(:crud, a)%>
        <%= link_to(
            "Delete", 
            idea_review_path(@idea, a),
            method: :delete,
            data: {
            confirm: "are you sure you want to delete this answer?"
        }
  
    )%>
     <% end %>
        <br>
    
        Reviewed <%=time_ago_in_words(a.created_at)%> ago
    </small>   
    <br>
 </li>


<% end %>